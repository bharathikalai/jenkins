pipeline {
    agent any
    
    stages {
        stage('System Info') {
            steps {
                sh 'echo "Running uname command..."'
                sh 'uname -a'
            }
        }
        
        stage('Process Monitoring') {
            steps {
                sh 'echo "Running top command..."'
                sh 'top -n 1 -b'
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
