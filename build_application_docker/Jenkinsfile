pipeline {
    agent any

    environment {
        // Define variables for referencing credentials
        DOCKERHUB_CREDENTIALS_ID = 'docker-hub-credentials'
        IMAGE_NAME = "bharathikalai/your-image-name:latest"
    }

        stage('Checkout') {
                steps {
                    checkout scm
                }
            }
        
        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    docker.build("${IMAGE_NAME}:${env.BUILD_NUMBER}")
                }
            }
        }
        
        stage('Push Docker Image') {
            steps {
                script {
                    // Authenticate and push Docker image to Docker Hub (or custom registry)
                    docker.withRegistry('https://hub.docker.com', // Replace with your registry URL if needed
                                       credentialsId: DOCKERHUB_CREDENTIALS_ID) {
                        docker.image("${IMAGE_NAME}:${env.BUILD_NUMBER}").push()
                    }
                }
            }
        }
    }
    
    post {
        always {
            // Clean up Docker images after build
            script {
                docker.image("${IMAGE_NAME}:${env.BUILD_NUMBER}").remove()
            }
        }
    }
}